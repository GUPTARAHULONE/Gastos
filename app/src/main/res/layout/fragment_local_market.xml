<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".local_fragment.LocalMarketFragment"
    android:background="#FFFFFF">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/img3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/long_left_black" />

    <TextView
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="62dp"
        android:textColor="@color/dark_blue"
        android:textSize="30sp"
        android:text="Local Market" />

    <LinearLayout
        android:id="@+id/linear_layout_local1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/local_r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_local2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_local1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_below="@+id/local"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:text="Shops Nearby"
            />
        
        <ImageView
            android:id="@+id/map"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/map_24px"
            />

        <TextView
            android:id="@+id/l3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="10dp"
            android:layout_below="@+id/local"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:text="See Map"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_local3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_local2"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/local_r2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_local4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_local3"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/local_r3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

    </LinearLayout>

</RelativeLayout>