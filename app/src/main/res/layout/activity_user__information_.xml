<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_fragment.User_Information_Activity">

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        >

        <ImageView
            android:id="@+id/userback"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:background="@drawable/user_back"
            />
        <ImageView
            android:id="@+id/arrow_long_"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="21dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="21dp"

            android:src="@drawable/long_left_white"/>

        <TextView
            android:id="@+id/membership"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="27dp"
            android:layout_centerHorizontal="true"
            android:text="MEMBERSHIP"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="top"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_above="@+id/rec"
            android:layout_below="@+id/membership"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:src="@drawable/home_fill"
            app:civ_border_width="2dp" />

        <RelativeLayout
            android:id="@+id/rec"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/rectangle_3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                />
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="21dp"
               android:layout_marginTop="10dp"
                android:text="Tarun Singh"
               android:textSize="20dp"
                android:textColor="@color/white"

                />

            <TextView
                android:id="@+id/card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_name"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="4dp"
                android:text="xxxxxxxxx45"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_name"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="Date"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/re1">

        <RelativeLayout
            android:id="@+id/box1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/email_addre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="Email Address"
                android:textSize="18dp"
                android:textColor="#0E3746"
                android:textStyle="bold"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/email_addre"
                android:elevation="20dp"
                >
                <TextView
                    android:id="@+id/tarunsingh_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="13dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:text="Tarunsingh@gmail.com"
                    android:textSize="12dp"
                    android:textColor="#0E3746"
                    />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/box2"
            android:layout_below="@+id/box1"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="BIRTH DATE"
                android:textSize="18dp"
                android:textColor="#0E3746"
                android:textStyle="bold"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/c1"
                android:layout_width="130dp"
                android:layout_height="34dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/birth"
                android:elevation="20dp"
                >
                <TextView
                    android:id="@+id/birth_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="13dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:text="Oct 15,1967"
                    android:textSize="12dp"
                    android:textColor="#0E3746"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/gen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="77dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="Gender"
                android:textSize="18dp"
                android:textColor="#0E3746"
                android:textStyle="bold"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="34dp"
                android:layout_below="@id/gen"
                android:layout_alignParentRight="true"
                android:layout_marginRight="21dp"
                android:elevation="20dp">

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="Male"
                    android:textColor="#0E3746"
                    android:textSize="12dp" />
            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/box3"
            android:layout_below="@+id/box2"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="Contact Number"
                android:textSize="18dp"
                android:textColor="#0E3746"
                android:textStyle="bold"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/c2"
                android:layout_width="130dp"
                android:layout_height="34dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/contact"
                android:elevation="20dp"
                >
                <TextView
                    android:id="@+id/contact_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="13dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:text="+91 987654321"
                    android:textSize="12dp"
                    android:textColor="#0E3746"
                    />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        </RelativeLayout>

</RelativeLayout>