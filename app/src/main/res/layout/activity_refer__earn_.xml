<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Refer_Earn_Activity"
   >


    <ImageView
        android:id="@+id/c"
        android:layout_width="425dp"
        android:layout_height="425dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-173dp"
        android:background="@drawable/ellip_60"
        />
    <ImageView
        android:id="@+id/billing_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/long_left_black" />
    <ImageView
        android:id="@+id/p"
        android:layout_width="133dp"
        android:layout_height="171dp"
        android:layout_marginTop="7dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/group_536"
        />
    <TextView
        android:id="@+id/coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@+id/p"
        android:layout_centerHorizontal="true"
        android:text="50 Coins"
        android:textSize="25dp"
         android:textColor="#0E3746"
        />
    <RelativeLayout
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
       >

        <View
            android:id="@+id/rec"
            android:layout_width="184dp"
            android:layout_height="50dp"
            android:background="@drawable/rrectangle_147"
            />

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginTop="12dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="ABCDEF"
            android:textSize="20dp"
            android:textColor="#0E3746"
            />

        <View
            android:id="@+id/line_19"
            android:layout_width="2dp"
            android:layout_height="39dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="false"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/code"
            android:background="@drawable/code_line" />

        <TextView
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/line_19"
            android:layout_marginLeft="20dp"
            android:text="copy \ncode"
            android:textSize="12dp"
            android:textColor="#0E3746"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

         <androidx.cardview.widget.CardView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:elevation="20dp"
             app:cardCornerRadius="5dp"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="30dp"
             android:layout_alignParentRight="true"
             android:layout_marginRight="30dp"
             >

             <RelativeLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 >

                 <EditText
                     android:id="@+id/enter_code"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:layout_marginLeft="30dp"
                     android:layout_alignParentTop="true"
                     android:layout_marginTop="5dp"
                     android:hint="Enter code"
                     android:textSize="12dp"
                     android:inputType="textCapWords"
                     android:textColor="#0E3746"
                     android:textColorHint="#0E3746"
                     android:background="@null"
                     android:maxLines="1"
                     />


                 <View
                     android:id="@+id/rectangle_1"
                     android:layout_width="50dp"
                     android:layout_height="19.05dp"
                     android:layout_alignParentRight="true"
                     android:layout_marginRight="20dp"
                     android:layout_alignParentTop="true"
                     android:layout_marginTop="8dp"
                     android:background="@drawable/validate_btn"

                     />
                 <TextView
                     android:id="@+id/validate"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:layout_marginRight="25dp"
                     android:layout_alignParentTop="true"
                     android:layout_marginTop="10dp"
                     android:text="Validate"
                     android:textSize="10dp"
                     android:textColor="@color/white"
                     />
             </RelativeLayout>



         </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <TextView
        android:id="@+id/freq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b2"
        android:layout_marginTop="10dp"
        android:text="Frequently Asked Questions"
        android:layout_centerHorizontal="true"
        android:textColor="#0E3746"
        />

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@+id/freq"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="231dp"
                        android:layout_height="wrap_content"
                        android:text="@string/what_is_ref"
                        android:textColor="#0E3746"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/btn_drop1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:src="@drawable/ic_baseline_keyboard_arrow_down_25" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtDrop1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/what_is_ref_ans"
                    android:textSize="16sp"
                    android:textColor="#0E3746"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="231dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#0E3746"
                    android:text="How It Works?"/>
                <ImageButton
                    android:id="@+id/btn_drop2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_25"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtDrop2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:textColor="#0E3746"
                android:text="@string/what_is_ref_ans"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="231dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#0E3746"
                        android:text="Where Can I Use These Coins?"/>
                    <ImageButton
                        android:id="@+id/btn_drop3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_baseline_keyboard_arrow_down_25"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtDrop3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textColor="#0E3746"
                    android:text="@string/what_is_ref_ans"/>
            </LinearLayout>

            <Button
                android:id="@+id/sharebtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Share"
                android:textAllCaps="false"
                android:background="@drawable/rectangle211"
                android:textSize="20sp"
                android:backgroundTint="@null"
                app:backgroundTint="#F7B401"
                />
        </LinearLayout>

    </ScrollView>



</RelativeLayout>